.ui-footer {
  height: 120rpx;
  display: block;
  position: fixed;
  right: 0;
  left: 0;
  z-index: 2;
  bottom: 0;
  margin-bottom: 0;
}

.ui-footer-bar {
  height: 120rpx;
  display: flex;
  background-color: #fff;
}

.ui-footer-item {
  flex: 1;
  justify-content: center;
  /* align-items: center; */
  padding-left: 10rpx;
  padding-right: 10rpx;
  text-align: center;
  position: relative;
  font-size: 30rpx;
  display: flex;
}

.ui-footer-item .iconfont {
  font-size: 54rpx;
  color: #999;
}

.ui-footer-item .img {
  width: 50rpx;
  height: 50rpx;
  margin-top: 10rpx;
  position: relative;
}

.ui-footer-bar .text {
  position: absolute;
  bottom: 6rpx;
  left: 50%;
  transform: translateX(-50%);
  /* margin-top: -20rpx; */
  font-size: 26rpx;
  color: #999;
}