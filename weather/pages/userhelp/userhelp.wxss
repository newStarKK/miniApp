/* pages/userhelp/userhelp.wxss */
.main{
  width: 690rpx;
  margin: 0 auto
}
.listoone{
  width: 100%;
  background:rgba(255,255,255,1);
  box-shadow:2rpx 3rpx 7rpx 0px rgba(117,117,117,0.2);
  border-radius:10rpx;
  margin: 30rpx auto 0;
  position: relative;
  border-top-left-radius: 10ppx;
  border-top-right-radius: 10rpx;
  border-bottom-left-radius: 10prx;
  border-bottom-right-radius: 10rpx
}
.topone{
  width: 660rpx;
  padding: 0 0 0 34rpx;
  height: 90rpx;
  line-height: 90rpx;
  display: flex;
  justify-content: space-between;
  position: relative
}
.topone text{
  font-size:30rpx;
  font-weight:400;
  color:rgba(85,85,85,1);
}
.topone image{
  width: 17rpx;
  height: 30rpx;
  margin-top: 29rpx;
}
.desc{
  width: 625rpx;
  font-size:20rpx;
  font-weight:400;
  color:rgba(102,102,102,0.6);
  line-height: 36rpx;
  border-top: 1px solid rgba(204,201,207,0.5);
  margin: 0 auto;
  padding: 24rpx 0rpx 30rpx 0rpx;
}
.ad{
  width:690rpx;
  display: none
  
}
.slideup{
 display: block;
 background: #fff;
  box-shadow:2rpx 3rpx 7rpx 0px rgba(117,117,117,0.2);
}
.slidedown{
 right: -100%;
 top: -90rpx;
}
.bordernone{
  height: 95rpx;
}
.cover{
  width: 100%;
  height: 90rpx;
  position: absolute;
  left: 0;
  top: 0;
  z-index: 99
}