/* pages/my/my.wxss */
.my-top{
  width: 100%;
  height: 160rpx;
  padding: 30rpx 70rpx;
  background: #fff;
  display: flex;
  align-items: center;
}
.my-tl{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  overflow: hidden;

}
.userinfo-avatar{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  overflow: hidden;
  padding: 0;
  margin: 0 20rpx 0 0;
}
.my-tl image{
  width: 100rpx;
  height: 100rpx;
}
.my-tr{
  font-size:40rpx;
  font-family:PingFangSC-Semibold;
  font-weight:600;
  color:rgba(0,0,0,1);
  margin-left:32rpx;
}
.main{
  width: 690rpx;
  margin: 0 auto 0
}
.tophead{
  display: block;
  width:690rpx;
  height:215rpx;
  background:rgba(255,255,255,1);
  box-shadow:2rpx 3rpx 7rpx 0rpx rgba(117,117,117,0.2);
  border-radius:10rpx;
  margin-top: 20rpx
}
.photoBox{
  width:140rpx;
  height:140rpx;
  border: 10rpx solid rgba(74,134,255,0.3);
  border-radius:50%;
  float: left;
  margin-top: 39rpx;
  margin-left: 69rpx;
  overflow: hidden
}
.photoBox image{
  width: 100%;
  height: 100%;
}
.name{
  width: 196rpx;
  float: left;
  margin-top: 96rpx;
  margin-left: 86rpx;
  font-size:30rpx;
  font-weight:400;
  color:rgba(102,102,102,1);
}
.publicImg{
  display: block;
  width:18rpx;
  height:32rpx;
  float: right;
  margin-top: 97rpx;
  margin-right: 30rpx;
}
.publicImg1{
  display: block;
  width:18rpx;
  height:32rpx;
  float: right;
  margin-top: 29rpx;
  margin-right: 30rpx;
}
.listnav{
  width:690rpx;
  height:90rpx;
  background:rgba(255,255,255,1);
  box-shadow:2rpx 3rpx 7rpx 0px rgba(117,117,117,0.2);
  border-radius:10rpx;
  margin-top: 30rpx;
  display: flex;
  justify-content: space-between;
}
.icontext{
  margin-left: 20rpx;
  line-height: 90rpx;
}
.icontext image{
  vertical-align: middle
}
.icontext text{
  font-size:30rpx;
  font-weight:400;
  color:rgba(1,1,1,1);
  margin-left: 18rpx;
}
